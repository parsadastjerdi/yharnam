<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:rowCount="11"
        android:columnCount="2">

        <!-- Name text with input form -->
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Name"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:hint="Enter Name"
            android:gravity="center">
        </EditText>

        <!-- Origin text with drop down list-->
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Origin"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>


        <Spinner
            android:id="@+id/origin_spinner"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dialog"
            android:entries="@array/origins"
            android:gravity="center">
        </Spinner>

        <!-- Gender text with button-->
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Gender"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <ToggleButton
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:textOn="Male"
            android:textOff="Female"
            android:gravity="center">
        </ToggleButton>


        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Level"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/player_level"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/zero"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Insight"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/insight_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Vitality">
        </TextView>

        <FrameLayout
            android:id="@+id/vitality_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Endurance"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/endurance_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:text="Strength"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/strength_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:text="Skill"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/skill_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="0"
            android:text="Bloodtinge"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/bloodtinge_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:text="Arcane"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>

        <FrameLayout
            android:id="@+id/arcane_button_container">
            <include layout="@layout/skills_button" />
        </FrameLayout>

    </GridLayout>

</RelativeLayout>
</ScrollView>