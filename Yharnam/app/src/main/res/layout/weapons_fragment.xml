<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/right_hand_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="30sp"
        android:text="Right Hand Weapons"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight">
    </TextView>

    <GridLayout
        android:id="@+id/right_hand_weapons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_hand_title"
        android:rowCount="3"
        android:columnCount="2">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Right Hand #1"
            android:background="@color/colorPrimaryLight"
            android:textColor="@color/colorLight"
            android:gravity="center">
        </TextView>


        <Spinner
            android:id="@+id/right_hand_spinner1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:spinnerMode="dialog">
        </Spinner>


        <ImageView
            android:id="@+id/rh1_image"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_width="210dp"
            android:src="@drawable/ic_launcher_foreground">
        </ImageView>


        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Right Hand #2"
            android:background="@color/colorPrimaryLight"
            android:textColor="@color/colorLight"
            android:gravity="center">
        </TextView>


        <Spinner
            android:id="@+id/right_hand_spinner2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dialog">
        </Spinner>


        <ImageView
            android:id="@+id/rh2_image"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_width="210dp"
            android:src="@drawable/ic_launcher_foreground">
        </ImageView>

    </GridLayout>


    <TextView
        android:id="@+id/left_hand_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_hand_weapons"
        android:text="Left Hand Weapons"
        android:textSize="30sp"
        android:gravity="top|center"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorLight">
    </TextView>


    <GridLayout
        android:id="@+id/left_hand_weapons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_hand_title"
        android:rowCount="3"
        android:columnCount="2">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Left Hand #1"
            android:background="@color/colorPrimaryLight"
            android:textColor="@color/colorLight"
            android:gravity="center">
        </TextView>


        <Spinner
            android:id="@+id/left_hand_spinner1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:spinnerMode="dialog">
        </Spinner>



        <ImageView
            android:id="@+id/lh1_image"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground">
        </ImageView>


        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Left Hand #2"
            android:background="@color/colorPrimaryLight"
            android:textColor="@color/colorLight"
            android:gravity="center">
        </TextView>



        <Spinner
            android:id="@+id/left_hand_spinner2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dialog">
        </Spinner>


        <ImageView
            android:id="@+id/lh2_image"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_width="210dp"
            android:src="@drawable/ic_launcher_foreground">
        </ImageView>
    </GridLayout>


</RelativeLayout>
</ScrollView>